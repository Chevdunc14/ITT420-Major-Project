<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAdmissionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UCC Admissions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00205B"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtAdmissionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join the Faculty of Technology and Engineering at UCC and prepare for a future in IT, Cybersecurity, Software Engineering, and more. To apply, you must have:\n\n• At least 5 CSEC subjects\n• Including Mathematics and English\n\nFlexible schedules, scholarships, and online learning options available!"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnApplyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Online"
            android:layout_gravity="center_horizontal"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>
