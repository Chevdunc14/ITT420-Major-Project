<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDetailCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITT1001"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#00205B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intro to IT"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDetailCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits: 3"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDetailPrereqs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prerequisite: None"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This course covers the fundamentals of IT and computing..."
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>
